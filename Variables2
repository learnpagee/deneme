public class Main {
    public static void main(String[] args) {

        // camelCase
        int ogrenciSayisi = 12;
        String mesaj = "Oğrenci sayisi : ";

        //Reusability (Yeniden kullanılabilirlik, bir kere yaz tekrar tekrar kullan)

        System.out.println(mesaj + ogrenciSayisi);
        System.out.println("ogrenci sayim :"+ogrenciSayisi);


        // Primitive Variables
        int number = 12;
        double dNumber = 12.5;
        byte byteNumber = 12;
        char character = 'N';
        boolean isTrueOrFalse = true;


    }
}
